# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Database Configuration
DATABASE_URL=postgresql://astralstream:astralstream123@localhost:5432/astralstream
POSTGRES_PASSWORD=astralstream123

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PASSWORD=redis123

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# RabbitMQ Configuration
RABBITMQ_URL=amqp://astralstream:rabbitmq123@localhost:5672
RABBITMQ_USER=astralstream
RABBITMQ_PASSWORD=rabbitmq123

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_USE_SSL=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# AI Services
OPENAI_API_KEY=your-openai-api-key
WHISPER_MODEL=base
DEEPL_API_KEY=your-deepl-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Media Processing
MAX_UPLOAD_SIZE=5368709120
SUPPORTED_VIDEO_FORMATS=mp4,mkv,avi,mov,webm
SUPPORTED_AUDIO_FORMATS=mp3,wav,flac,aac,ogg
ENABLE_HARDWARE_ACCELERATION=true
FFMPEG_PATH=/usr/local/bin/ffmpeg

# Streaming Configuration
HLS_SEGMENT_DURATION=10
HLS_PLAYLIST_SIZE=5
ENABLE_ADAPTIVE_STREAMING=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_CLOUD_SYNC=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Third-party Services
YOUTUBE_API_KEY=your-youtube-api-key
TMDB_API_KEY=your-tmdb-api-key
TVDB_API_KEY=your-tvdb-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@astralstream.app

# Payment Processing (if implementing premium features)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1073741824

# Security
ENCRYPTION_KEY=your-encryption-key
API_KEY_SALT=your-api-key-salt
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
DEBUG_MODE=false